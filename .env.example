# 環境變數設定檔
# 複製此檔案為 .env 並填入實際的值

# 基本設定
NODE_ENV=development
PORT=3000
SITE_URL=https://daigou-platform.onrender.com
ADMIN_URL=https://daigou-platform.onrender.com/admin

# 資料庫設定 (使用 Render 提供的 PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database_name
DATABASE_SSL=true

# SendGrid 設定
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDER_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 檔案上傳設定 (使用 Cloudinary 或其他圖床服務)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# 支付設定 (綠界或藍新)
PAYMENT_MERCHANT_ID=your-merchant-id
PAYMENT_HASH_KEY=your-hash-key
PAYMENT_HASH_IV=your-hash-iv
PAYMENT_RETURN_URL=https://daigou-platform.onrender.com/api/payment/callback
PAYMENT_NOTIFY_URL=https://daigou-platform.onrender.com/api/payment/notify

# 匯率 API (可選)
EXCHANGE_RATE_API_KEY=your-api-key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/TWD

# Session 設定
SESSION_SECRET=your-session-secret-key

# 跑跑虎集運設定
PPH_API_KEY=your-pph-api-key
PPH_API_URL=https://api.pph.com
PPH_MEMBER_PREFIX=935-170

# Redis 設定 (可選，用於快取)
REDIS_URL=redis://localhost:6379

# 日誌設定
LOG_LEVEL=info
LOG_FILE=app.log

# CORS 設定
CORS_ORIGIN=http://localhost:3000,https://daigou-platform.onrender.com

# 管理員預設帳號
ADMIN_DEFAULT_EMAIL=admin@daigou-platform.com
ADMIN_DEFAULT_PASSWORD=ChangeThisPassword123!

# 其他設定
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.webp
SERVICE_FEE_RATE=0.08
DEFAULT_SHIPPING_FEE=350